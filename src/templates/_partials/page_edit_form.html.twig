<form>
    <fieldset class="offset-bottom">
        <div class="form-group">
            <label for="title" class="required">Page title</label>
            <input
                type="text"
                id="title"
                class="form-control"
                data-toggle="slugger"
                data-slugger-target="#slug"
                {% if context == 'edit' %}
                    value="{{ page_data.title }}"
                {% endif %}
                required
            />
        </div>
        <div class="form-group">
            <label class="required" for="slug">URL</label>
            <div class="input-group">
                <span class="input-group-addon">http://{{ url }}/</span>
                <input
                    type="text"
                    id="slug"
                    class="form-control"
                    maxlength="255"
                    {% if context == 'edit' %}
                        value="{{ page_data.slug }}"
                    {% endif %}
                    required
                />
            </div>
            <p class="help-block">
                Generated automatically.
            </p>
        </div>
        <div class="form-group">
            <label for="featured_image">Featured image</label>
            <div class="media">
                {% if context == 'edit' %}
                    <div class="media-left">
                        <img src="//satyr.io/120x60" srcset="//satyr.io/120x60, //satyr.io/240x120 2x" alt="Featured image" />
                    </div>
                {% endif %}
                <div class="media-body">
                    <div class="media-heading">Upload:</div>
                    <input type="file" id="featured_image" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="body" class="required">Page body</label>
            <textarea class="form-control" data-onload-ckeditor>{{ page_data.body|raw }}</textarea>
        </div>
    </fieldset>
    <fieldset class="offset-bottom">
        <div class="row">
            <div class="col-sm-6">

                <div class="form-group">
                    <label for="date_published" class="required">Publish time</label>
                    <div class="input-group date" data-onload-datetimepicker='{"format": "YYYY-MM-DD HH:mm"}'>
                        <input
                            type="text"
                            id="date_published"
                            class="form-control"
                            {% if context == 'edit' %}
                                value="{{ page_data.time_published|date('Y-m-d H:i') }}"
                            {% endif %}
                        />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                        </span>
                    </div>
                </div>

            </div>
            <div class="col-sm-6">

                <div class="form-group">
                    <label for="date_unpublished" class="required">Unpublish time</label>
                    <div class="input-group date" data-onload-datetimepicker='{"format": "YYYY-MM-DD HH:mm"}'>
                        <input
                            type="text"
                            id="date_published"
                            class="form-control"
                            {% if context == 'edit' %}
                                value="{{ page_data.time_unpublished|date('Y-m-d H:i') }}"
                            {% endif %}
                        />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                        </span>
                    </div>
                </div>

            </div>
        </div><!-- .row -->
    </fieldset>
    <div class="form-group">
        <input type="submit" class="btn btn-primary btn-raised" value="Save and publish" />
        <input type="submit" class="btn btn-default btn-raised" value="Save draft" />
        <div class="form-action-static">
            or
            <a href="{{ path('pages') }}">cancel</a>
        </div>
    </div>
</form>
